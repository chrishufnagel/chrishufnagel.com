{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "custom": {},
        "appearanceTools": true,
        "color": {
            "defaultGradients": false,
            "defaultPalette": false,
            "defaultDuotone": false,
            "duotone": [
                {
                    "colors": ["#000000", "#ffffff"],
                    "slug": "dark",
                    "name": "Dark"
                },
                {
                    "colors": ["#ffffff", "#000000"],
                    "slug": "light",
                    "name": "Light"
                }
            ],
            "gradients": [
                {
                    "slug": "hard-vertical-background-1-to-foreground-1",
                    "gradient": "linear-gradient(to bottom,var(--wp--preset--color--background-1) 50%,var(--wp--preset--color--foreground-1) 50%)",
                    "name": "Hard Vertical: background-1 to foreground-1"
                },
                {
                    "slug": "hard-vertical-foreground-1-to-background-1",
                    "gradient": "linear-gradient(to bottom,var(--wp--preset--color--foreground-1) 50%,var(--wp--preset--color--background-1) 50%)",
                    "name": "Hard Vertical: foreground-1 to background-1"
                },
                {
                    "slug": "hard-horizontal-background-1-to-foreground-1",
                    "gradient": "linear-gradient(to right,var(--wp--preset--color--background-1) 50%,var(--wp--preset--color--foreground-1) 50%)",
                    "name": "Hard Horizontal: background-1 to foreground-1"
                },
                {
                    "slug": "hard-horizontal-foreground-1-to-background-1",
                    "gradient": "linear-gradient(to right,var(--wp--preset--color--foreground-1) 50%,var(--wp--preset--color--background-1) 50%)",
                    "name": "Hard Horizontal: foreground-1 to background-1"
                },
                {
                    "slug": "hard-vertical-background-1-to-background-2",
                    "gradient": "linear-gradient(to bottom,var(--wp--preset--color--background-1) 50%,var(--wp--preset--color--background-2) 50%)",
                    "name": "Hard Vertical: background-1 to background-2"
                },
                {
                    "slug": "hard-vertical-background-2-to-background-1",
                    "gradient": "linear-gradient(to bottom,var(--wp--preset--color--background-2) 50%,var(--wp--preset--color--background-1) 50%)",
                    "name": "Hard Vertical: background-2 to background-1"
                }
            ],
            "palette": [
                {
                    "slug": "primary",
                    "color": "#16a34a",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#4ade80",
                    "name": "Secondary"
                },
                {
                    "slug": "background-1",
                    "color": "#ffffff",
                    "name": "Background 1"
                },
                {
                    "slug": "background-2",
                    "color": "#f5f5f4",
                    "name": "Background 2"
                },
                {
                    "slug": "background-3",
                    "color": "#e7e5e4",
                    "name": "Background 3"
                },
                {
                    "slug": "background-4",
                    "color": "#d6d3d1",
                    "name": "Background 4"
                },
                {
                    "slug": "background-5",
                    "color": "#a8a29e",
                    "name": "Background 5"
                },
                {
                    "slug": "foreground-1",
                    "color": "#0c0a09",
                    "name": "Foreground 1"
                },
                {
                    "slug": "foreground-2",
                    "color": "#1c1917",
                    "name": "Foreground 2"
                },
                {
                    "slug": "foreground-3",
                    "color": "#292524",
                    "name": "Foreground 3"
                },
                {
                    "slug": "foreground-4",
                    "color": "#44403c",
                    "name": "Foreground 4"
                },
                {
                    "slug": "foreground-5",
                    "color": "#57534e",
                    "name": "Foreground 5"
                },
                {
                    "slug": "foreground-6",
                    "color": "#78716c",
                    "name": "Foreground 6"
                },
                {
                    "slug": "tertiary",
                    "color": "#fde047",
                    "name": "Tertiary"
                }
            ]
        },
        "spacing": {
            "defaultSpacingSizes": false,
            "spacingSizes": [
                {
                    "name": "xSmall",
                    "size": "clamp(0.5rem, 1.25vw, 0.75rem)",
                    "slug": "x-small"
                },
                {
                    "name": "Small",
                    "size": "clamp(0.75rem, 1.5vw, 1rem)",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "clamp(1rem, 2vw, 1.5rem)",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "clamp(1.25rem, 3vw, 2rem)",
                    "slug": "large"
                },
                {
                    "name": "xLarge",
                    "size": "clamp(1.5rem, 4.5vw, 3.5rem)",
                    "slug": "x-large"
                },
                {
                    "name": "xxLarge",
                    "size": "clamp(1.75rem, 6vw, 5rem)",
                    "slug": "xx-large"
                },
                {
                    "name": "Giant",
                    "size": "clamp(2rem, 7vw, 6.75rem)",
                    "slug": "giant"
                }
            ],
            "units": ["%", "px", "em", "rem", "vh", "vw"],
            "blockGap": true,
            "padding": true,
            "margin": true
        },
        "typography": {
            "defaultFontSizes": false,
            "dropCap": false,
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "\"Inter\", sans-serif",
                    "name": "Inter",
                    "slug": "base",
                    "fontFace": [
                        {
                            "fontDisplay": "block",
                            "fontFamily": "Inter",
                            "fontWeight": "100 200 300 400 500 600 700 800 900",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/inter/Inter.ttf"]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "size": "1rem",
                    "slug": "small",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    }
                },
                {
                    "name": "Medium",
                    "size": "1.25rem",
                    "slug": "medium",
                    "fluid": {
                        "min": "1rem",
                        "max": "1.25rem"
                    }
                },
                {
                    "name": "Large",
                    "size": "1.75rem",
                    "slug": "large",
                    "fluid": {
                        "min": "1.125rem",
                        "max": "1.75rem"
                    }
                },
                {
                    "name": "xLarge",
                    "size": "2rem",
                    "slug": "x-large",
                    "fluid": {
                        "min": "1.25rem",
                        "max": "2rem"
                    }
                },
                {
                    "name": "xxLarge",
                    "size": "2.5rem",
                    "slug": "xx-large",
                    "fluid": {
                        "min": "1.75rem",
                        "max": "2.5rem"
                    }
                }
            ],
            "lineHeight": true
        },
        "useRootPaddingAwareAlignments": true,
        "layout": {
            "contentSize": "620px",
            "wideSize": "960px"
        }
    },
    "styles": {
        "blocks": {
            "core/post-title": {
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--foreground-1)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            },
                            "typography": {
                                "textDecoration": "underline"
                            }
                        },
                        "typography": {
                            "textDecoration": "none"
                        }
                    }
                },
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.1"
                }
            },
            "core/query-pagination": {
                "elements": {
                    "link": {
                        "border": {
                            "radius": "5px",
                            "width": "0"
                        },
                        "color": {
                            "background": "var(--wp--preset--color--tertiary)",
                            "text": "var(--wp--preset--color--foreground-1)"
                        },
                        "spacing": {
                            "padding": {
                                "top": "0.5rem",
                                "right": "1.15rem",
                                "bottom": "0.5rem",
                                "left": "1.15rem"
                            }
                        },
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--small)",
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "background": "var(--wp--preset--color--foreground-2)",
                                "text": "var(--wp--preset--color--background-1)"
                            }
                        }
                    }
                }
            },
            "core/post-template": {
                "elements": {
                    "h2": {
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--large)",
                            "lineHeight": "1.1"
                        }
                    }
                }
            },
            "core/comment-author-name": {
                "typography": {
                    "fontWeight": "600"
                },
                "elements": {
                    "link": {
                        "typography": {
                            "textDecoration": "none",
                            "fontSize": "var(--wp--preset--font-size--small)"
                        }
                    }
                }
            },
            "core/comment-content": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--x-small)"
                    }
                }
            },
            "core/comment-date": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-small)"
                },
                "elements": {
                    "link": {
                        "typography": {
                            "textDecoration": "none",
                            "fontSize": "var(--wp--preset--font-size--x-small)"
                        },
                        "color": {
                            "text": "var(--wp--preset--color--foreground-3)"
                        }
                    }
                }
            },
            "core/comment-edit-link": {
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--foreground-3)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            }
                        }
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-small)"
                }
            },
            "core/comment-reply-link": {
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--primary)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--foreground-1)"
                            }
                        },
                        "typography": {
                            "textDecoration": "none",
                            "fontWeight": "600"
                        }
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },
            "core/comments-title": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)"
                },
                "spacing": {
                    "margin": {
                        "top": "0px",
                        "bottom": "var(--wp--preset--spacing--large)"
                    }
                }
            },
            "core/post-comments-form": {
                "elements": {
                    "heading": {
                        "spacing": {
                            "margin": {
                                "top": "var(--wp--preset--spacing--large)",
                                "bottom": "var(--wp--preset--spacing--small)"
                            }
                        },
                        "typography": {
                            "fontSize": "var(--wp--preset--font-size--large)"
                        }
                    }
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "1px 0"
                }
            },
            "core/image": {
                "border": {
                    "radius": "5px"
                },
                "elements": {
                    "caption": {
                        "spacing": {
                            "margin": {
                                "top": "var(--wp--preset--spacing--x-small)"
                            }
                        },
                        "typography": {
                            "fontSize": "clamp(0.75rem, 1vw, 0.875rem)",
                            "lineHeight": "1.3"
                        },
                        "color": {
                            "text": "var(--wp--preset--color--foreground-5)"
                        }
                    }
                }
            },
            "core/separator": {
                "border": {
                    "color": "currentColor",
                    "radius": "0",
                    "style": "solid",
                    "width": "1px 0 0"
                }
            },
            "core/spacer": {
                "spacing": {
                    "margin": {
                        "top": "0"
                    }
                }
            },
            "core/query-title": {
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.25",
                    "fontSize": "var(--wp--preset--font-size--large)"
                }
            },
            "core/quote": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontStyle": "normal",
                    "lineHeight": "1.25"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--large)",
                        "right": "0",
                        "bottom": "var(--wp--preset--spacing--large)",
                        "left": "0"
                    }
                },
                "elements": {
                    "cite": {
                        "typography": {
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "fontSize": "var(--wp--preset--font-size--small)"
                        }
                    }
                }
            },
            "core/site-title": {
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--foreground-1)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            }
                        },
                        "typography": {
                            "textDecoration": "none",
                            "letterSpacing": "0"
                        }
                    }
                },
                "typography": {
                    "letterSpacing": "-0.03em",
                    "lineHeight": "1.6",
                    "fontSize": "22px",
                    "fontWeight": "600"
                }
            },
            "core/buttons": {
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--small)"
                }
            },
            "core/button": {
                "border": {
                    "radius": "5px"
                },
                "spacing": {
                    "padding": {
                        "top": "0.6rem",
                        "right": "clamp(1rem, 1vw, 1.25rem)",
                        "bottom": "0.5rem",
                        "left": "clamp(1rem, 1vw, 1.25rem)"
                    }
                },
                "typography": {
                    "fontWeight": "500"
                },
                "color": {
                    "background": "var(--wp--preset--color--foreground-1)",
                    "text": "var(--wp--preset--color--background-1)"
                },
                "css": ":hover { background: var(--wp--preset--color--foreground-4); color: var(--wp--preset--color--background-1); transform: scale(1.015); }"
            },
            "core/navigation": {
                "elements": {
                    "link": {
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "typography": {
                                "textDecoration": "underline"
                            }
                        }
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "textDecoration": "none",
                    "fontWeight": "500"
                },
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--small)"
                }
            }
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--base)",
                    "lineHeight": "1.25",
                    "letterSpacing": "-0.04em",
                    "fontWeight": "500"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--medium)"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--x-large)"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--large)"
                    }
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "textTransform": "uppercase"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--foreground-1)"
                },
                "typography": {
                    "textDecoration": "underline"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--foreground-1)"
                    },
                    "typography": {
                        "textDecoration": "none"
                    }
                },
                "css": "text-decoration-thickness: 0.08em; text-underline-offset: 0.085em;"
            }
        },
        "color": {
            "background": "var(--wp--preset--color--background-1)",
            "text": "var(--wp--preset--color--foreground-1)"
        },
        "spacing": {
            "blockGap": "var(--wp--preset--spacing--small)",
            "padding": {
                "top": "0px",
                "right": "var(--wp--preset--spacing--medium)",
                "bottom": "0px",
                "left": "var(--wp--preset--spacing--medium)"
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--base)",
            "lineHeight": "1.6",
            "fontSize": "var(--wp--preset--font-size--small)",
            "fontWeight": "400",
            "letterSpacing": "-0.01em"
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        },
        {
            "name": "sidebar",
            "title": "Sidebar",
            "area": "sidebar"
        }
    ],
    "customTemplates": [
        {
            "name": "rckbs-child-custom-template",
            "title": "Custom Template",
            "postTypes": ["page", "post"]
        }
    ]
}
